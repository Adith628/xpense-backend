              "raw": "{\n  \"title\": \"Lunch at restaurant\",\n  \"description\": \"Business lunch meeting\",\n  \"amount\": 25.50,\n  \"category\": \"Food & Dining\",\n  \"transaction_type\": \"expense\",\n  \"date\": \"2024-01-15\"\n}"
            },

                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Transaction by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/transactions/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "TRANSACTION_ID_HERE"
                }
              ]
